{
  "extends": "../tsconfig.json",
  "include": [
    "src",
    "react-component.d.ts",
    "../shared/src/libs/types/order.type.ts",
    "../shared/src/libs/types/customer-info.type.ts"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  }
}
